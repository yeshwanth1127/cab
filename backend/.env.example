# ===========================================
# Namma Cabs Backend - Environment Variables
# Copy to .env and fill in your values.
# ===========================================

# Server
PORT=5000
NODE_ENV=development

# Database (optional: defaults to backend/db/cab_booking.db)
# Use full path to cab.db if you use that file, e.g.:
# DATABASE_PATH=/var/www/nammacabs.com/cab/backend/cab.db
# DATABASE_PATH=

# Auth – use a long random string in production
JWT_SECRET=your_secret_key

# Frontend URL (for emails and links)
FRONTEND_URL=http://localhost:3000

# Optional: serve built frontend from backend (production)
# FRONTEND_BUILD_PATH=/var/www/nammacabs.com/cab/frontend/build

# -------------------------------------------
# Google Maps (Places, Distance Matrix)
# -------------------------------------------
GOOGLE_MAPS_BACKEND_KEY_NEW=
GOOGLE_MAPS_BACKEND_KEY=

# -------------------------------------------
# Email (e.g. Gmail) – optional, for sending booking emails
# -------------------------------------------
# EMAIL_SERVICE=gmail
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password
# EMAIL_FROM_NAME=Namma Cabs
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_SECURE=false

# -------------------------------------------
# n8n Webhooks – optional
# Set full URL per webhook, or N8N_WEBHOOK_BASE_URL + path (e.g. /invoice-generated)
# Payload includes: customerEmail, email, invoiceId, amount, pdfUrl (for invoice)
# -------------------------------------------
# N8N_WEBHOOK_BASE_URL=https://your-n8n.example.com/webhook
# N8N_WEBHOOK_BOOKING_SUCCESS_URL=https://your-n8n.example.com/webhook/booking-success
# N8N_WEBHOOK_DRIVER_INFO_URL=https://your-n8n.example.com/webhook/driver-info
# N8N_WEBHOOK_INVOICE_GENERATED_URL=https://your-n8n.example.com/webhook/invoice-generated
# DEBUG_N8N=1
# Set DEBUG_N8N=1 to log webhook triggers in server console

# -------------------------------------------
# WhatsApp Business API (Meta) – optional
# https://developers.facebook.com/docs/whatsapp/cloud-api
# Sends: (1) booking confirmation after successful booking,
#        (2) driver info to customer when admin assigns a driver.
# -------------------------------------------
# Create an app at https://developers.facebook.com → Add Product → WhatsApp.
# In WhatsApp → API Setup you get: Phone number ID. Use a System User or app token for ACCESS_TOKEN.
# WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
# WHATSAPP_ACCESS_TOKEN=your_permanent_access_token
# WHATSAPP_API_VERSION=v21.0
#
# SEND_WHATSAPP_ON_BOOKING=1   # set to 0 to disable booking confirmation
# SEND_WHATSAPP_DRIVER_INFO=1  # set to 0 to disable driver-assignment WhatsApp
# DEBUG_WHATSAPP=1             # log API responses

# -------------------------------------------
# Invoice branding (optional overrides)
# -------------------------------------------
# INVOICE_COMPANY_NAME=Namma Cabs
# INVOICE_ADDRESS=Your address
# INVOICE_SUPPORT_PHONE=+91-xxxxxxxxxx
# INVOICE_EMAIL=help@nammacabs.com
# INVOICE_GSTIN=29XXXXXXXXXX
# INVOICE_CUSTOMER_STATE=KARNATAKA

# -------------------------------------------
# Redis (optional – used by places cache if present)
# -------------------------------------------
# REDIS_URL=redis://localhost:6379
